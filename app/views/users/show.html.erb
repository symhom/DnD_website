<h1>User Profile</h1>
<hr>

<% user = User.find_by(id: params["id"]) %>

<p>Email: <%= user.email %></p>

<h3>Change Password</h3>

<div class="row">
  <div class="col-sm-4">

    <%= form_tag "/users/#{user.id}", method: "patch" do %>

      <p>Old password: <input name="old_password" type="password" autofocus class="form-control" required></p>
      <p>New password: <input name="new_password" type="password" autofocus class="form-control" required></p>

      <button class="btn btn-primary">Update Map Name</button>
      <%end %>
  </div>
</div>