<% movie = Movie.find_by(id: params["id"]) %>

<div class="row">
  <div class="col-sm-6">
    <h1><%= movie.title %> (<%= movie.year %>)</h1>
    <% if movie.director.present? %>
      <p class="lead">Directed By: <%= link_to movie.director.name, "/directors/#{movie.director.id}" %></p>
    <% end %>
  </div>
</div>
<div class="row">

  <div class="col-sm-6">
    <%= image_tag movie.poster_url %>
  </div>
  <div class="col-sm-6">
    <% if movie.director.present? %>
      <p>Movies by this director:</p>

      <div class="row">
        <% movie.director.movies.each do |movie| %>
          <div class="col-sm-2">
            <%= link_to image_tag(movie.poster_url, class: 'img-fluid'), "/movies/#{movie.id}" %>
          </div>
        <% end %>
      </div>

    <% end %>
  </div>
</div>
