
<% game = Game.find_by(id: params["id"]) %>


    <h1><%= game.name %></h1>

	<%players = Player.where(game_id: game.id) %>

	<% players.each do |player| %>
		<% character = Character.find_by(id: player.character_id) %>
		<img src = <%=character.picture_url%> class = "dragImage" class = 'ui-widget-content'  draggable = "true" style = "width:150px; height:150px" >

	<%end %>

      <%map = Map.find_by(id: game.map_id) %>
    <%width = FastImage.size(map.picture_url)[0] %>
    <%height = FastImage.size(map.picture_url)[1] %>
    <div class = "canvas">
    <img src = <%= map.picture_url %>  style = "width:<%=width%>px; height:<%=height%>px" >


</div>
 
