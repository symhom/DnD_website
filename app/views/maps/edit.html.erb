<% map = Map.find_by(id: params["id"]) %>

<% if session[:user_id] == map.user_id %>

<h1>Editing <%= map.name %></h1>

<div class="row">
  <div class="col-sm-4">

    <%= form_tag "/maps/#{map.id}", method: "patch" do %>

      <p>Name: <input value="<%= map.name %>" name="name" type="text" autofocus class="form-control" required></p>
      <p>Map Description: <br> <textarea name = "description" class = "form-control" rows = "4" cols="50" > <%=map.description %></textarea> </p>

      <button class="btn btn-primary">Update Map Name</button>
      <%end %>
  </div>
</div>

<%else%>
<p>You are not allowed to edit this map. </p>
<%end%>
